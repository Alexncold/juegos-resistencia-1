rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Colección de reservas - lectura pública, escritura autenticada
    match /reservations/{reservationId} {
      // Cualquiera puede leer reservas (necesario para mostrar disponibilidad)
      allow read: if true;
      // Solo usuarios autenticados pueden crear reservas
      allow create: if request.auth != null;
      // Solo el dueño o admin puede actualizar/eliminar
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isActive == true);
    }
    
    // Colección de noticias - lectura pública, escritura admin
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isActive == true;
    }
    
    // Configuraciones - lectura pública, escritura admin
    match /settings/{setting} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isActive == true;
    }
    
    // Time slots - lectura pública, escritura admin
    match /timeSlots/{slotId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isActive == true;
    }
    
    // Mesas de juego libre - lectura pública, escritura admin
    match /freePlayTables/{tableId} {
      allow read: if true;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isActive == true;
    }
    
    // Admins - solo lectura para verificación
    match /admins/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if false; // Solo se modifica manualmente en consola Firebase
    }
  }
}
